{
  "name": "cassess",
  "version": "1.0.0",
  "description": "CaSSess",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run vite:build",
    "build:ts": "tsc -b",
    "eslint": "eslint .",
    "lint": "npm run prettier && npm run stylelint && npm run eslint",
    "lint:check": "npm run prettier:check && npm run stylelint && npm run eslint",
    "prettier": "prettier . -w",
    "prettier:check": "prettier . -c",
    "prettier:write": "npm run prettier",
    "preview": "npm run vite:build && vite preview --open",
    "serve": "vite serve --host --open",
    "stylelint": "stylelint '**/*.css'",
    "test": "npm run lint:check && npm run build:ts && vitest run",
    "vite:build": "rm -rf dist && vite build",
    "vite:preview": "npm run preview",
    "vite:serve": "npm run serve",
    "vitest": "vitest run"
  },
  "lint-staged": {
    "*.{css,html,js,jsx,json,md,ts,tsx,yml}": [
      "prettier -w"
    ],
    "*.css": [
      "stylelint"
    ],
    "*.{html,js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.42.0",
    "@html-eslint/parser": "^0.42.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^13.0.6",
    "jsdom": "^28.1.0",
    "stylelint": "^17.4.0",
    "stylelint-config-standard": "^40.0.0",
    "vite": "^7.0.5"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
