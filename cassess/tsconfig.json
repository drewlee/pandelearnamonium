{
  "compilerOptions": {
    "module": "nodenext",
    "rootDir": "./",
    "types": ["vitest/globals"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["concepts/**/*", "projects/**/*", "tests/**/*"]
}
