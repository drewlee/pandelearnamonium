{
  "name": "cassess",
  "version": "1.0.0",
  "description": "CaSSess",
  "author": "Andrew A. Lee",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run build:vite",
    "build:ts": "tsc -b",
    "build:vite": "rm -rf dist && vite build",
    "eslint": "eslint .",
    "lint": "npm run prettier && npm run stylelint && npm run eslint",
    "lint:check": "npm run prettier:check && npm run stylelint && npm run eslint",
    "prepare": "cd .. && husky",
    "prettier": "prettier . -w",
    "preview": "npm run build:vite && vite preview --open",
    "prettier:check": "prettier . -c",
    "prettier:write": "npm run prettier",
    "serve": "vite serve --open",
    "stylelint": "stylelint '**/*.css'",
    "test": "npm run lint:check && npm run build:ts && vitest run",
    "vitest": "vitest run"
  },
  "lint-staged": {
    "!(*.css)": [
      "prettier -uw",
      "eslint"
    ],
    "*.css": [
      "prettier -uw",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@html-eslint/eslint-plugin": "^0.35.0",
    "@html-eslint/parser": "^0.35.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "volta": {
    "node": "22.14.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
