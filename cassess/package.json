{
  "name": "cassess",
  "version": "1.0.0",
  "description": "CaSSess",
  "author": "Andrew A. Lee",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run build:vite",
    "build:ts": "tsc -b",
    "build:vite": "rm -rf dist && vite build",
    "eslint": "eslint .",
    "lint": "npm run prettier && npm run stylelint && npm run eslint",
    "lint:check": "npm run prettier:check && npm run stylelint && npm run eslint",
    "prepare": "cd .. && husky",
    "prettier": "prettier . -w",
    "preview": "npm run build:vite && vite preview --open",
    "prettier:check": "prettier . -c",
    "prettier:write": "npm run prettier",
    "serve": "vite serve --open",
    "stylelint": "stylelint '**/*.css'",
    "test": "npm run lint:check && npm run build:ts && vitest run",
    "vitest": "vitest run"
  },
  "lint-staged": {
    "!(*.css)": [
      "prettier -uw",
      "eslint"
    ],
    "*.css": [
      "prettier -uw",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@html-eslint/eslint-plugin": "^0.42.0",
    "@html-eslint/parser": "^0.42.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "22.17.1"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
